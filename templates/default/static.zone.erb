# Automatically generated via Chef

# Delegated zones
<% @zones.each do |zone| %>
<% zone[:nameservers].each do |hostname, ip| %>
&<%= zone[:subdomain] %>:<%= ip %>:<%= hostname %>:<%= zone[:ttl] || "300" %>
<% end %>
<% end %>
# Devices without chef clients

<% @devices.each do |device| %>
=<%= device[:fqdn] %>:<%= device[:ipaddress] %>:300
<% end %>
